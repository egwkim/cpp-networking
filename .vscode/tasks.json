{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileWorkspaceFolder}\\out\\${fileBasenameNoExtension}.exe",
                "-lwsock32",
                "-lucrtbase"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Modified version of task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}